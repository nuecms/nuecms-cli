{
  "name": "@nuecms/cli",
  "version": "0.1.0",
  "description": "A CLI tool for NueCMS providing commands like 'nue conf', 'nue mod', 'nue page', etc.",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "nue": "dist/cli.js"
  },
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "clean": "rm -rf dist",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "test": "vitest"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "nuecms",
    "cli",
    "typescript",
    "node",
    "commands"
  ],
  "author": "Terry Cai <gidcai@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nuecms/nuecms-cli.git"
  },
  "bugs": {
    "url": "https://github.com/nuecms/nuecms-cli/issues"
  },
  "homepage": "https://github.com/nuecms/nuecms-cli#readme",
  "devDependencies": {
    "@types/node": "^18.0.0",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.1",
    "typescript": "^5.7.2",
    "vite": "^6.0.2",
    "vite-plugin-dts": "^4.3.0",
    "vite-tsconfig-paths": "^5.1.3",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.2.1",
    "commander": "^13.0.0",
    "dotenv": "^16.4.7",
    "mysql2": "^3.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:import/recommended",
      "plugin:import/typescript",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "plugins": [
      "import",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": true,
    "trailingComma": "es5",
    "printWidth": 80
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
